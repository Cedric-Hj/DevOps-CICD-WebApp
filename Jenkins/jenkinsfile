pipeline {
    agent any

    environment {
        dockerRepo = "cedrichj/devops_cicd"
        KUBECONFIG = '/var/lib/jenkins/.kube/kubeconfig'
        appVersion = "2.0.${env.BUILD_NUMBER}"
        FolderName = 'Tests'
        ViewName = '5_Pipelines'
    }

    stages {

        stage('Clean workspace and Checkout git repo') {
            steps {
                deleteDir()
                git branch: 'test', url: 'https://github.com/Cedric-Hj/DevOps-CICD-WebApp.git'
            }
        }

        stage('Install') {
            steps {
                echo "$appVersion"
                echo "<---------------- Build started --------------->"
                sh 'mvn clean install -Dmaven.test.skip=true'
                echo "<---------------- Build completed --------------->"
            }
            
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo '<--------------- Start of Build Docker Image  --------------->'
                    echo "Building Docker image with tag: ${dockerRepo}:test${appVersion}"
                    docker.build("${dockerRepo}:test${appVersion}")
                    echo '<--------------- End of Build Docker Image  --------------->'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    echo '<--------------- Start of Push Docker Image  --------------->'
                    docker.withRegistry('', 'DockerCredencials') {
                        sh "docker push ${dockerRepo}:test${appVersion}" 
                    echo '<--------------- End of Push Docker Image  --------------->'
                    }
                }
            }
        }

        stage("Deploy App") {
            steps {
                script {
                    echo '<--------------- Start of Helm Upgrade/Install --------------->'
                    sh '''
                        sudo sed -i "s|image: ${dockerRepo}:test.*|image: ${dockerRepo}:test$appVersion|" /var/lib/jenkins/helm/Ced_Devops_Webapp-test/templates/deployment.yaml 
                        sudo sed -i "s/^appVersion: .*/appVersion: \"$appVersion\"/" /var/lib/jenkins/helm/Ced_Devops_Webapp-test/Chart.yaml
                        sudo sed -i "s/^version: .*/version: $appVersion/" /var/lib/jenkins/helm/Ced_Devops_Webapp-test/Chart.yaml                   
                        helm upgrade --install ced-devops-webapp-test /var/lib/jenkins/helm/Ced_Devops_Webapp-test \
                        --namespace ced-devops-cicd-test \
                        --kubeconfig=$KUBECONFIG \
                        --set image.tag=$appVersion \
                        --wait
                    '''
                    echo '<--------------- End of Helm Deploy --------------->'
                }
            }
        }

        stage('Get jobs') {
            steps {
                script {
                    dir('/var/lib/jenkins/utility') {
                        def generatedList = sh(script: "python3 ScanJenkinsTest.py ${FolderName} ${ViewName}", returnStdout: true).trim()
                        list = generatedList.split('\n')
                    }
                }
            }
        }

        stage('Building jobs') {
            steps {
                script {
                    for (int i = 0; i < list.size(); i++) {
                        def jobName = "${FolderName}/${list[i]}"
                        def reportDir = "reports/${list[i]}"  // Directory for each job's reports
                        
                        stage(jobName) {
                            echo "Element: ${jobName}"
                            catchError(buildResult: 'UNSTABLE', message: 'Job has Failed or is Unstable', stageResult: 'UNSTABLE') {
                                echo "<------------------ started building ${jobName} ------------------>"
                                echo "${jobName}"
                                
                                build job: "${jobName}", wait: true
                                
                                // Copy artifacts into job-specific directories
                                copyArtifacts(
                                    projectName: "${jobName}",
                                    filter: 'reports/**/*',
                                    selector: lastCompleted(),
                                    target: reportDir
                                )
                                
                                // Publish JUnit test results from the specific directory
                                junit "${reportDir}/**/*"
                                
                                echo "<-------------------- End of build ${jobName} -------------------->"
                            }
                        }
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline completed successfully'
            archiveArtifacts artifacts: 'reports/**/*', allowEmptyArchive: true
        }
        failure {
            echo 'Pipeline failed'
            archiveArtifacts artifacts: 'reports/**/*', allowEmptyArchive: true 
        }
    }
}
