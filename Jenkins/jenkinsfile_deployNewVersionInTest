pipeline {
    agent any

    environment {
        deploymentsourceFile = 'deployment.yaml'
        namespacesourceFile = 'namespace.yaml'
        serviceFilesourceFile = 'service.yaml'
        //parametrized properties
        appVersion = "${VersionNumber}"
        name = "${VersionName}"
        port = "${PortNumber}"

        deploymentFile = '/var/lib/jenkins/helm/Ced_Devops_Webapp-test/templates/deployment.yaml'
        serviceFile = '/var/lib/jenkins/helm/Ced_Devops_Webapp-test/templates/service.yaml'

        dockerRepo = "cedrichj/devops_cicd"
        KUBECONFIG = '/var/lib/jenkins/.kube/kubeconfig'
    }

    stages {

        stage('Checkout') {
            steps {
                deleteDir()
                git branch: 'test', url: 'https://github.com/Cedric-Hj/DevOps-CICD-WebApp.git'
            }
        }

        stage('Check Docker Image') {
            steps {
                script {
                    echo '<--------------- Checking Docker Image --------------->'
                    echo "${dockerRepo}:v${appVersion}"
                    try {
                        sh '''
                            if ! docker image inspect ${dockerRepo}:v${appVersion} >/dev/null 2>&1; then
                                echo "Docker image ${dockerRepo}:v${appVersion} does not exist."
                                exit 1
                            fi
                        '''
                    } catch (Exception e) {
                        echo "Error checking Docker image: ${e.message}"
                        currentBuild.result = 'FAILURE'
                        error("Docker image ${dockerRepo}:v${appVersion} does not exist.")
                    }
                }
            }
        }

        stage('Create Helm Chart') {
            steps {
                sh'''
                    cd /var/lib/jenkins/helm

                    sudo helm create /var/lib/jenkins/helm/Ced_Devops_Webapp-${name}

                    cd /var/lib/jenkins/helm/Ced_Devops_Webapp-${name}/templates
                    sudo rm -rf *

                    sudo touch /var/lib/jenkins/helm/Ced_Devops_Webapp-${name}/templates/deployment.yaml
                    sudo touch /var/lib/jenkins/helm/Ced_Devops_Webapp-${name}/templates/service.yaml
                    '''
                //Copy the content of the source file to the destination file
                sh '''
                    sudo cp ${deploymentsourceFile} /var/lib/jenkins/helm/Ced_Devops_Webapp-${name}/templates/deployment.yaml
                    sudo cp ${serviceFilesourceFile} /var/lib/jenkins/helm/Ced_Devops_Webapp-${name}/templates/service.yaml
                '''
                //Change the value of the port for the service yaml
                sh '''
                    sudo sed -i "s|image: ${dockerRepo}:.*|image: ${dockerRepo}:v$appVersion|" /var/lib/jenkins/helm/Ced_Devops_Webapp-${name}/templates/deployment.yaml  
                    sudo sed -i "s|name:.*|name: ced-devops-cicd-${name}|" /var/lib/jenkins/helm/Ced_Devops_Webapp-${name}/templates/deployment.yaml
                    sudo sed -i "s|name:.*|name: ced-devops-cicd-${name}|" /var/lib/jenkins/helm/Ced_Devops_Webapp-${name}/templates/service.yaml 
                    
                    sudo sed -i "s|nodePort:.*|nodePort: $port|" /var/lib/jenkins/helm/Ced_Devops_Webapp-${name}/templates/service.yaml
                    sudo sed -i "s/^appVersion: .*/appVersion: \"$appVersion\"/" /var/lib/jenkins/helm/Ced_Devops_Webapp-${name}/Chart.yaml
                    sudo sed -i "s/^version: .*/version: $appVersion/" /var/lib/jenkins/helm/Ced_Devops_Webapp-${name}/Chart.yaml         
                '''
            }
        }

        stage("Deploy App") {
            steps {
                script {
                    echo '<--------------- Start of Helm Upgrade/Install --------------->'
                    sh '''
                        helm install ced-devops-webapp-${name} /var/lib/jenkins/helm/Ced_Devops_Webapp-${name} \
                        --namespace ced-devops-cicd-test \
                        --kubeconfig=$KUBECONFIG \
                        --wait
                    '''
                    echo '<--------------- End of Helm Deploy --------------->'
                }
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully'
        }
        failure {
            echo 'Pipeline failed'
        }
    }
}
